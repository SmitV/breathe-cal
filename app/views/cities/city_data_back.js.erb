<% if mobile_device? %>
$("#list-box").html("<%= j render 'breathe/list.mobile' %>");
<% else %>

$("#list-box").html("<%= j render 'breathe/list.html' %>");
$("#fox-box").html("<%= j render 'breathe/fox_box.html' %>");
$("#recent_searches-render").html("<%= j render 'breathe/recent_searches.html' %>");
<% end %>
var offset = parseInt($('#detail-box').parent().css('width')) + 'px'
$("#list-box").animate
        ({
            'margin-left' : '0px'
        });
$("#list-box").show();
$("#detail-box").animate
        ({
            'margin-left' : offset
            
        }, 500, function() {
            $("#detail-box").hide();
        });